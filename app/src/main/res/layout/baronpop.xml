<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baronPlayerOne"
        android:layout_alignLeft="@+id/baronPlayerOne"
        android:layout_alignStart="@+id/baronPlayerOne"
        android:layout_marginTop="59dp"
        android:id="@+id/baronPlayerOneCard"
        android:textColor="@android:color/black" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baronTargetPlayerCard"
        android:layout_alignBaseline="@+id/baronPlayerOneCard"
        android:layout_alignBottom="@+id/baronPlayerOneCard"
        android:layout_alignLeft="@+id/baronTargetPlayer"
        android:layout_alignStart="@+id/baronTargetPlayer"
        android:textColor="@android:color/black" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="53dp"
        android:id="@+id/baronPlayerOne"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:id="@+id/baronTargetPlayer"
        android:layout_alignBaseline="@+id/baronPlayerOne"
        android:layout_alignBottom="@+id/baronPlayerOne"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/baronResult"
        android:textColor="@android:color/black" />
</RelativeLayout>