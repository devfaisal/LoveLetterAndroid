<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.padcf.loveletter.MainActivity"
        android:weightSum="1"
        android:background="@drawable/background1">


        <RelativeLayout
            android:visibility="invisible"
            android:id="@+id/threeButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fourSevenEight"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp">

            <Button
                android:text="P3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:tag="2"
                android:enabled="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:text="P4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:tag="3"
                android:enabled="true"

                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="P2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="1"
                android:id="@+id/button1"
                android:enabled="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <ToggleButton
            android:soundEffectsEnabled="false"
            android:text="Reveal Cards"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/toggleButton"
            android:textOn="Hide Cards"
            android:textOff="Reveal Cards"
            tools:background="@android:drawable/button_onoff_indicator_on"
            android:isScrollContainer="false"
            android:textColorLink="@android:color/holo_red_light"
            android:background="@drawable/revealcardsbackground1"
            android:textSize="24sp"
            android:textColor="?attr/colorPrimary"
            tools:fontFamily="sans-serif"
            android:fontFamily="serif"
            android:shadowColor="@color/colorPrimary"
            android:padding="10dp"

            android:layout_marginTop="11dp"
            android:layout_below="@+id/cardslist"
            android:layout_centerHorizontal="true" />

        <Button
            android:visibility="invisible"
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourSevenEight"
            android:layout_marginBottom="13dp"
            android:layout_above="@+id/imageButton2"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/countess"
            android:id="@+id/imageButton2"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/vplayedCardsButton"
            android:layout_toEndOf="@+id/vplayedCardsButton"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baron"
            android:id="@+id/imageButton"
            android:background="#00000000"
            android:cropToPadding="true"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_toLeftOf="@+id/cardslist"
            android:layout_toStartOf="@+id/cardslist" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cardslist"
            android:background="#00000000"
            android:id="@+id/cardslist"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/fourSevenEight"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/velvetbag1"
            android:id="@+id/vplayedCardsButton"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/cardslist"
            android:layout_alignStart="@+id/cardslist" />


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>


